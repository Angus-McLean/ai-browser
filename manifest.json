{
	"name": "ai-browser",
	"description": "Surfin' the interwebs with voice and AI",
	"version": "0.0.0.1",
	"manifest_version": 2,
	"icons": {

	},
	"background": {
		"scripts": [
			"/bower_components/lodash/dist/lodash.js",
			"/bower_components/fuse.js/src/fuse.js",
			"/libs/websites.js",
			"/libs/resampler.js",
			"/libs/speex.js",
			"/libs/nuance.js",
			"/libs/mix_nlu.js",
			"/actions/nuance.api.js",
			"/actions/globalized.background.js",
			"/background/background.js"
		]
	},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": [
				"/content/inject_events.js"
			],
			"run_at": "document_start"
		}
	],
	"permissions": [
		"tabs", "http://*/*", "activeTab", "storage", "debugger"
	],
	"web_accessible_resources": [

	],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"browser_action": {
		"default_title": "Buzify",
		"default_popup": "public/index.html"
	}
}
